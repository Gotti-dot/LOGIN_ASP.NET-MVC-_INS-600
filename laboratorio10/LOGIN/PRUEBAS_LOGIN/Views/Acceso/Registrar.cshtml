@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

    <style>
        /* Variables de Color (Usaremos el mismo estilo Azul Marino/Azul brillante) */
        :root {
            --primary-color: #0b2241; /* Azul Marino */
            --accent-color: #007bff; /* Azul para acentos */
            --bg-color: #f4f7f6; /* Fondo Gris Muy Claro */
            --card-color: #ffffff; /* Fondo del card Blanco */
            --text-color: #333333;
        }

        /* Reset y Fondo */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--bg-color);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            color: var(--text-color);
        }

        /* Contenedor Principal (El Card) */
        .login-card {
            width: 350px;
            padding: 40px;
            background-color: var(--card-color);
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        /* Título y Logo */
        h1 {
            color: var(--primary-color);
            font-size: 24px;
            margin-bottom: 30px;
            font-weight: 600;
        }

        /* Formulario y Grupos de Input */
        form {
            display: flex;
            flex-direction: column;
        }

        .input-group {
            display: flex;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 6px;
            overflow: hidden;
            transition: border-color 0.3s;
        }

            .input-group:focus-within {
                border-color: var(--accent-color);
            }

        .input-icon {
            background-color: var(--primary-color);
            color: white;
            padding: 10px 12px;
            display: flex;
            align-items: center;
        }

        input[type="text"],
        input[type="password"] {
            flex-grow: 1;
            padding: 10px 15px;
            border: none;
            outline: none;
            font-size: 15px;
            color: var(--text-color);
        }

        /* Botón */
        button[type="submit"] {
            padding: 12px;
            margin-top: 15px;
            background-color: var(--accent-color);
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.1s;
        }

            button[type="submit"]:hover {
                background-color: #0056b3;
            }

            button[type="submit"]:active {
                transform: scale(0.99);
            }

        /* Enlaces y Mensajes */
        .links-container {
            margin-top: 25px;
            font-size: 14px;
        }

            .links-container p, .links-container a {
                margin: 5px 0;
                text-decoration: none;
                color: var(--accent-color);
            }

                .links-container a:hover {
                    text-decoration: underline;
                }

        .message-box {
            margin-bottom: 20px;
        }

        .alert-danger {
            padding: 10px;
            border-radius: 6px;
            background-color: #f8d7da; /* Color de fondo de error */
            color: #721c24; /* Color de texto de error */
            border: 1px solid #f5c6cb;
            font-size: 14px;
            text-align: left;
        }
    </style>
</head>
<body>

    <div class="login-card">

        <h1>REGISTRO DE USUARIO</h1>

        <form action="@Url.Action("Registrar","Acceso")" method="post">

            <div class="input-group">
                <div class="input-icon"><i class="fas fa-envelope"></i></div>
                <input type="text" name="Correo" placeholder="Correo Electrónico" required>
            </div>

            <div class="input-group">
                <div class="input-icon"><i class="fas fa-lock"></i></div>
                <input type="password" name="Clave" placeholder="Contraseña" required>
            </div>

            <div class="input-group">
                <div class="input-icon"><i class="fas fa-key"></i></div>
                <input type="password" name="ConfirmarClave" placeholder="Confirmar Contraseña" required>
            </div>

            <div class="message-box">
                @if (ViewData["Mensaje"] != null)
            {
                    <div class="alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }
            </div>

            <button type="submit">Registrarse</button>
        </form>

        <div class="links-container">
            <p style="margin-top: 15px; color: var(--text-color);">
                ¿Ya tienes una cuenta? <a href="@Url.Action("Login","Acceso")">Iniciar Sesión</a>
            </p>
        </div>

    </div>

</body>
</html>